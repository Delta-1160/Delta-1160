#include<vector>
#include <iostream>
using namespace std;
void bubbleSort(vector<int>&arr, int n)
{   
    for(int i = 1; i<n; i++) {
        //for round 1 to n-1
        bool swapped = false;
        
        for(int j =0; j<n-i; j++) {
            
            //process element till n-i th index
            if(arr[j] > arr[j+1]) {
                swap(arr[j], arr[j+1]);
                swapped = true;
            }
            
        }
        
        if(swapped == false) {
            //already sorted
            break;
        }
           
    }
}
void printing(vector<int>&arr ,int n  ){
	
	for (int i=0 ; i<n; i++){
		cout<<arr[i]<< " ";
	}
}

int main(){
	
	vector<int>arr = {2,3,1,4};
	int n = sizeof (arr)/ sizeof (arr[0]);

	bubbleSort (arr, n);
	printing (arr, n);
			
}
